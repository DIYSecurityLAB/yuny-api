# Environment variables template
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="30m"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-key"
REFRESH_TOKEN_EXPIRES_IN="7d"
PORT=3000
NODE_ENV=development
SMS_PROVIDER_ENABLED=false
SMS_MOCK_MODE=true

# API Key Security
API_KEY_SECRET="your-super-secret-api-key-hmac-key"

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_MOCK_MODE=true

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Password Reset Configuration
PASSWORD_RESET_TOKEN_EXPIRES_MINUTES=15
PASSWORD_RESET_MAX_ATTEMPTS_PER_IDENTIFIER=3
PASSWORD_RESET_MAX_ATTEMPTS_PER_IP=10
PASSWORD_RESET_RATE_LIMIT_WINDOW_HOURS=1

# AlfredPay Configuration
ALFRED_PAY_BASE_URL=https://api.alfredpay.com
ALFRED_PAY_API_KEY="your-alfred-pay-api-key"
YUNY_INTERNAL_WALLET="your-yuny-internal-wallet-address"